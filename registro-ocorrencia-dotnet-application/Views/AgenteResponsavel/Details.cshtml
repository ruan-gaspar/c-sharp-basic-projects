@model RegistroOcorrencias.Models.AgenteResponsavel
@{
    ViewData["Title"] = "Detalhes do Agente";
}

<div class="container">
    <h2 class="text-white mb-4">Detalhes do Agente</h2>

    <dl class="row text-white">
        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9">@Model.NomeCompleto</dd>

        <dt class="col-sm-3">Cargo</dt>
        <dd class="col-sm-9">@Model.Cargo</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>