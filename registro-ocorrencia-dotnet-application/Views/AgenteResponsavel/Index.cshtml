@model IEnumerable<RegistroOcorrencias.Models.AgenteResponsavel>
@{
    ViewData["Title"] = "Agentes Responsáveis";
}

<div class="container">
    <h2 class="text-white mb-4">Agentes Responsáveis</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Novo Agente</a>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Nome</th>
            <th>Cargo</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var agente in Model)
        {
            <tr>
                <td>@agente.NomeCompleto</td>
                <td>@agente.Cargo</td>
                <td>
                    <a asp-action="Details" asp-route-id="@agente.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@agente.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@agente.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>