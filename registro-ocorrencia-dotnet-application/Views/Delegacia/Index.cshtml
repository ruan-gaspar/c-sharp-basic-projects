@model IEnumerable<RegistroOcorrencias.Models.Delegacia>
@{
    ViewData["Title"] = "Delegacias";
}

<div class="container">
    <h2 class="text-white mb-4">Delegacias</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Nova Delegacia</a>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Título</th>
            <th>Delegado</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var delegacia in Model)
        {
            <tr>
                <td>@delegacia.Titulo</td>
                <td>@delegacia.DelegadoResponsavel</td>
                <td>@delegacia.Telefone</td>
                <td>
                    <a asp-action="Details" asp-route-id="@delegacia.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@delegacia.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@delegacia.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>