@model RegistroOcorrencias.Models.Ocorrencia

@{
    ViewData["Title"] = "Excluir Ocorrência";
}

<div class="container">
    <h2 class="text-warning mb-4">Excluir Ocorrência</h2>

    <div class="alert alert-danger">
        Tem certeza que deseja excluir a ocorrência <strong>@Model.Titulo</strong>?
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-warning">Cancelar</a>
    </form>
</div>