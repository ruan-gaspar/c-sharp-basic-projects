@model RegistroOcorrencias.Models.Ocorrencia
    @{
    ViewData["Title"] = "Detalhes da Ocorrência";
}

<div class="container">
    <h2 class="text-white mb-4">Detalhes da Ocorrência</h2>

    <dl class="row text-white">
    <dt class="col-sm-3">Título</dt>
    <dd class="col-sm-9">@Model.Titulo</dd>

    <dt class="col-sm-3">Descrição</dt>
    <dd class="col-sm-9">@Model.Descricao</dd>

    <dt class="col-sm-3">Data Registro</dt>
    <dd class="col-sm-9">@Model.DataRegistro.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-3">Número</dt>
    <dd class="col-sm-9">@Model.NumeroOcorrencia</dd>

    <dt class="col-sm-3">Código</dt>
    <dd class="col-sm-9">@Model.CodigoOcorrencia</dd>

    <dt class="col-sm-3">Local</dt>
    <dd class="col-sm-9">@Model.LocalOcorrencia</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.StatusConcluido.ToString()</dd>

    <dt class="col-sm-3">Categoria</dt>
    <dd class="col-sm-9">@Model.Categoria</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>