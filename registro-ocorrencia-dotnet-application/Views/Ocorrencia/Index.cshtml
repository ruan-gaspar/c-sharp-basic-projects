@model IEnumerable<RegistroOcorrencias.Models.Ocorrencia>
@{
    ViewData["Title"] = "Ocorrências";
    var searchString = Context.Request.Query["searchString"].ToString();
}

<div class="container">
    <h2 class="text-white mb-4">Lista de Ocorrências</h2>

    <form asp-action="Index" method="get" class="mb-3">
        <input type="text" name="searchString" value="@searchString" 
               placeholder="Pesquisar por título" class="form-control" />
        <button type="submit" class="btn btn-primary mt-2">Pesquisar</button>
    </form>

    <a asp-action="Create" class="btn btn-success mb-3">Nova Ocorrência</a>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Título</th>
                <th>Descrição</th>
                <th>Data Registro</th>
                <th>Número</th>
                <th>Código</th>
                <th>Local</th>
                <th>Status</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Descricao</td>
                    <td>@item.DataRegistro.ToString("dd/MM/yyyy")</td>
                    <td>@item.NumeroOcorrencia</td>
                    <td>@item.CodigoOcorrencia</td>
                    <td>@item.LocalOcorrencia</td>
                    <td>@item.StatusConcluido.ToString()</td>
                    <td>@item.Categoria</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
