@model IEnumerable<RegistroOcorrencias.Models.Ocorrencia>
@{
    ViewData["Title"] = "Lista de Ocorrências";
}

<h2 class="mb-4 text-primary">Registro de Ocorrências</h2>

<form method="get" class="d-flex mb-3">
    <input type="text" name="busca" value="@ViewBag.Busca" class="form-control me-2" placeholder="Pesquisar por título ou categoria..." />
    <button class="btn btn-outline-primary">Pesquisar</button>
</form>

<a class="btn btn-success mb-3" href="/Ocorrencia/Create">+ Nova Ocorrência</a>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-primary">
    <tr>
        <th>Título</th>
        <th>Categoria</th>
        <th>Data</th>
        <th>Status</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var o in Model)
    {
        <tr>
            <td>@o.Titulo</td>
            <td>@o.Categoria</td>
            <td>@o.DataRegistro.ToShortDateString()</td>
            <td>@(o.StatusConcluido ? "Concluída" : "Em Aberto")</td>
            <td>
                <a href="/Ocorrencia/Details/@o.Id" class="btn btn-sm btn-info text-white">Detalhes</a>
                <a href="/Ocorrencia/Edit/@o.Id" class="btn btn-sm btn-warning text-white">Editar</a>
                <a href="/Ocorrencia/Delete/@o.Id" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>