@model RegistroOcorrencias.Models.Terceiros
@{
    ViewData["Title"] = "Detalhes do Terceiro";
}

<div class="container">
    <h2 class="text-white mb-4">Detalhes do Terceiro</h2>

    <dl class="row text-white">
        <dt class="col-sm-3">Nome Completo</dt>
        <dd class="col-sm-9">@Model.NomeCompleto</dd>

        <dt class="col-sm-3">CPF</dt>
        <dd class="col-sm-9">@Model.Cpf</dd>

        <dt class="col-sm-3">RG</dt>
        <dd class="col-sm-9">@Model.Rg</dd>

        <dt class="col-sm-3">Endere√ßo</dt>
        <dd class="col-sm-9">@Model.Endereco</dd>

        <dt class="col-sm-3">Telefone</dt>
        <dd class="col-sm-9">@Model.Telefone</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>